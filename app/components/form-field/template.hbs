{{#if label}}
  <label for="{{focusId}}">
    {{label}}
    {{#if secondaryLabel}}
      <div class="ui basic horizontal label">{{secondaryLabel}}</div>
    {{/if}}
  </label>
{{/if}}

{{yield (hash
  field=this
  checkbox=(component 'z-checkbox' field=this)
  datetime=(component 'z-datetime' field=this)
  dropdown=(component 'z-dropdown' field=this)
  radio=(component 'z-radio' field=this)
  text-area=(component 'z-text-area' fluid=true field=this)
  text-field=(component 'z-text-field' fluid=true field=this)
)}}

{{#if errorMessage}}
  <div class="ui basic red pointing prompt label">{{errorMessage}}</div>
{{/if}}
{{#if caption}}
  <div class="ui basic pointing label">{{caption}}</div>
{{/if}}
